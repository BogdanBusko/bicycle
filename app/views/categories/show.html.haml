.content
	.bicycles
		.inform-block
			.bicycle-used-category
				Category:
				= @used_category
			.search
				= form_tag category_path(params[:id]), method: :get do 
					= text_field_tag :search, params[:serach]
					= submit_tag 'Search'
		- @bicycles.each do |b|
			.bicycle
				.bicycle-image
					= image_tag(b.image_url)
				.bicycle-inform
					.bicycle-name
						= b.name
					.bicycle-description
						= b.description
		= will_paginate @bicycles
	.categories
		%ul
			%li
				= link_to 'All', root_path
			.categories
				- @categories.each do |c|
					%li
						= link_to c.category, category_path(id: c.id)
